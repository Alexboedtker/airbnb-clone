<div class="container">

  <div class="d-flex justify-content-between mt-3">
    <h1><%= link_to "Rent a Puzzle", puzzles_path %></h1>
    <%= render 'shared/searchbar' %>
  </div>


  <div class="row">
    <div class="col-7">
      <%= render 'shared/list' %>
    </div>
    <div class="col-5">
      <div id="map" class="card m-3"
        style="width: 100%; height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
