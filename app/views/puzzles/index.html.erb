<div class="d-flex">
  <div class="container">
    <div class="cards">
      <div class="m-3">
        <h1><%= link_to "Rent a Puzzle", puzzles_path %></h1>
        <%= render 'shared/searchbar' %>
      </div>
      <%= render 'shared/list' %>
    </div>
  </div>
  <div id="map"
