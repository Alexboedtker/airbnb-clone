<div class="container">
  <h1>Rent a Puzzle</h1>

  <% @puzzles.each do |puzzle| %>
    <div class="card m-3">
      <div class="d-flex">
        <div> <%= cl_image_tag puzzle.photo.attached? ? cl_image_path(puzzle.photo.key) : asset_path('puzzle-placeholder.jpg'), alt: puzzle.title, height: 200 %></div>
        <div class="card-body pl-3">
          <h5 class="card-title mb-4"><%= link_to puzzle.title, puzzle_path(puzzle.id) %></h5>
          <h6 class="card-subtitle "><%= puzzle.size %> Pieces</h6>
          <p class="card-text mb-2 text-muted"><%= puzzle.description %></p>
          <p class="card-text"><strong><%= puzzle.price %>CHF</strong>/day</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
