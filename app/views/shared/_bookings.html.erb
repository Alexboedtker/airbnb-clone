<div>
  <% @bookings.each do |booking| %>
    <div class="card card-list m-3">
      <div class="d-flex">
        <div class="card-image"><%= cl_image_tag booking.puzzle.photo.attached? ? cl_image_path(booking.puzzle.photo.key) : asset_path('puzzle-placeholder.png'), alt: booking.puzzle.title %></div>
        <div class="card-body pl-3">
          <h3 class="card-title mb-2"><%= link_to booking.puzzle.title, puzzle_path(booking.puzzle_id) %></h3>
          <p> Total price: <%= (booking.end_date.to_date - booking.start_date.to_date + 1).to_i * booking.puzzle.price %> CHF</p>
          <p><i class="far fa-calendar-check"></i> <%= booking.start_date %></p>
          <p><i class="far fa-calendar-times"></i> <%= booking.end_date %> </p>
          <p><i class="fas fa-map-marker-alt"></i> <%= booking.puzzle.address %> </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
