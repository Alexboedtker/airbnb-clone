<% @puzzles.each do |puzzle| %>
  <div class="card card-list m-3">
    <div class="d-flex">
      <div class="card-image"> <%= cl_image_tag puzzle.photo.attached? ? cl_image_path(puzzle.photo.key) : asset_path('puzzle-placeholder.png'), alt: puzzle.title %></div>
      <div class="card-body pl-3">
        <h5 class="card-title mb-2"><%= link_to puzzle.title, puzzle_path(puzzle.id) %></h5>
        <h6 class="card-subtitle text-muted"><%= puzzle.size %> Pieces</h6>
        <p class="card-text my-2"><i class="fas fa-map-marker-alt"></i> <%= puzzle.address.split.last %></p>
        <p class="card-text"><strong><%= puzzle.price %>CHF</strong>/day</p>
        <%= puzzle.rating %> <i class="fas fa-star" style="color: #FFC65A"></i>
      </div>
    </div>
  </div>
<% end %>
